
# ________________________________________________________________________________
# VARIABLES
# ________________________________________________________________________________
CXX = gcc

# optimization (-O0 none)
OPTZ = -O0


# ________________________________________________________________________________
# CONCURRENCY
# ________________________________________________________________________________
assembly.elf: clean assembly.c
	$(CXX) $(OPTZ) assembly.c -o assembly.elf
	./assembly.elf



# ________________________________________________________________________________
# CLEAN
# ________________________________________________________________________________
.PHONY: clean

clean:
	@rm -rf *.o
	@rm -rf *.out
	@rm -rf *.elf
