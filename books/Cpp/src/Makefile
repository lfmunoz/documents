
# ________________________________________________________________________________
# INFO
# ________________________________________________________________________________
info: 
	@echo "Cpp"
	g++ --version


# ________________________________________________________________________________
# REGEX
# ________________________________________________________________________________
regex: 
	g++ -std=c++11 src/Regexp.cpp -o regex.elf
	./regex.elf

# ________________________________________________________________________________
# TIME
# ________________________________________________________________________________
.PHONY: time.elf time

time: time.elf

time.elf: time.cpp
	g++ -std=c++11 $< -o $@
	./$@

# ________________________________________________________________________________
# HELPER METHODS
# ________________________________________________________________________________
clean:
	rm -rf *.elf

